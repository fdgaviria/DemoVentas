@model Ventas.WebApp.Models.RegistrarClienteViewModel

@{
    ViewData["Title"] = "Registrar Nuevo Cliente";
}

<div class="card"> 
    <div class="card-header bg-primary text-white">
        <h3 class="mb-0">Registrar Cliente</h3> 
    </div>
    <div class="card-body">
        <form asp-action="Formulario" method="post">
            @Html.AntiForgeryToken()

            <div class="row">
                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Identificacion"></label>
                        <input asp-for="Identificacion" class="form-control" />
                        <span asp-validation-for="Identificacion" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Nombre"></label>
                        <input asp-for="Nombre" class="form-control" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group mb-3">
                        <label asp-for="Telefono"></label>
                        <input asp-for="Telefono" class="form-control" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Direccion"></label>
                        <input asp-for="Direccion" class="form-control" />
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="form-group mt-3">
                <button type="submit" class="btn btn-primary">Guardar</button>
                <a asp-action="Index" asp-controller="Ventas" class="btn btn-secondary">Cancelar</a> 
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}